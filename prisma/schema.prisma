// Using Neon Serverless Postgres

generator client {
  provider = "prisma-client-js"
}

// Simple DATABASE_URL connection (no Accelerate complexity)
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        Int      @id @default(autoincrement())
  name      String
  variable  String   @db.Text
  status    String   @default("Свободно")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("sessions")
}

model TranslationTitle {
  id                  Int      @id @default(autoincrement())
  title               String
  status              String   @default("Нужен перевод")
  totalChapters       Int      @default(0) @map("total_chapters")
  translatedChapters  Int      @default(0) @map("translated_chapters")
  fileName            String?  @map("file_name")
  fileCharCount       Int?     @map("file_char_count")
  fileWordCount       Int?     @map("file_word_count")
  createdAt           DateTime @default(now()) @map("created_at")

  @@map("translation_titles")
}
